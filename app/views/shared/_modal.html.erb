<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title　font-weight-bold h3" id="exampleModalLabel">Fit Smartとは？</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="font-weight-bold text-danger text-center mb-5 h3">トレーニング内容を記録、シェアできるアプリです！</p>
        <p class="font-weight-bold text-center h4 mt-4">投稿例</p>
        <%= image_tag 'demo.png', class: "img-full full-width" %>
      </div>
      <% unless logged_in? %>
        <div class="modal-footer">
          <%= form_for(:session, url: login_path) do |f| %>
            <%= f.hidden_field :email, :value => 'guest1234@gmail.com' %>
            <%= f.hidden_field :password, :value => 'password' %>
            <%= f.submit "ゲストログイン", class: "btn btn-success font-italic text-left" %>
          <% end %>
          <%= link_to "サインアップ", signup_path, class: "btn btn-primary text-left" %>
          <%= link_to "ログイン", login_path, class: "btn btn-success text-left " %>
        </div>
      <% end %>
    </div>
  </div>
</div>