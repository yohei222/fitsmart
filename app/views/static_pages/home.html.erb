<% provide(:title, "投稿一覧") %>
<% if logged_in? %>
  <h1 class="display-5 text-center pb-5 mt-3 ">投稿一覧</h1>
    <% @feed_items.each do |micropost| %>
      <div class="card mb-5">
        <div class="card-header">
          <% if micropost.user.image? %>
            <img src='<%= micropost.user.image %>' class="icon"><span class="h2 ml-3 align-middle"><%= micropost.user.name %></span>
          <% else %>
            <%= image_tag 'default.jpeg' %><span class="h2 ml-3 pt-2 align-middle"><%= micropost.user.name %></span>
          <% end %>
        </div>
        <% if micropost.picture? %>
          <img src='<%= micropost.picture %>' class="card-img-top img-full">
        <% end %>
        <div class="card-body">
          <h3 class="card-title">タイトル</h3>
          <p class="card-text mt-4 bg-muted"><%= micropost.content %></p>
          <% if current_user?(micropost.user) || current_user.admin? %>
            <%= link_to "投稿を削除する", micropost, method: :delete, data: { confirm: "本当に削除してよろしいですか？" }, class: "btn btn-primary float-right " %>
          <% end %>
          <a href="#" class="btn btn-primary float-right mr-3">Go somewhere</a>
        </div>
        <div class="card-footer text-right">
          <small class="text-muted "><%= time_ago_in_words(micropost.created_at) %>前</small>
        </div>
      </div>
    <% end %>
<% else %>
  <div class="center jumbotron">
    <h1>ログインしていない時〜！</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>