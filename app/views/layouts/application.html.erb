<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <%= render 'layouts/shim' %>
  <body>
    <%= render 'layouts/navbar' %>
    <div class="container mt-2">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
    <%= render 'layouts/js' %>
  </body>

</html>
