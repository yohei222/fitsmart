<% provide(:title, "ログイン") %>

<h1 class="display-5 text-center pb-3 mt-3">ログイン</h1>
<div class="form mb-5">
  <%= form_for(:session, url: login_path) do |f| %>
    <%= render 'shared/flash_messages' %>
    <div class="form-group">
      <%= f.label :email, "Eメール" %>
      <%= f.text_field :email, class: "form-control", placeholder: "Eメールを入力してください" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: 'form-control',id: "exampleInputPassword1", placeholder: "パスワードを入力してください" %>
      <small id="emailHelp" class="form-text text-muted">パスワードは6文字以上で登録してください</small>
    </div>
    <br>
    <%= f.submit "ログインする", class: "btn btn-primary btn-block text-light" %>
  <% end %>
</div>